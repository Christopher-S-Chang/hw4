<h1><%= @place["name"] %></h1>



<p>
<a class = "btn btn-outline-success btn-lg" href="/entries/new?place_id=<%= @place["id"] %>" role="button"> New Entry </a>
</p>

<h2>My Entries</h2>
<% for entry in @entries %>
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
    <% if entry.uploaded_image.attached? %>
      <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
    <% else %>
      
    <% end %>
<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>