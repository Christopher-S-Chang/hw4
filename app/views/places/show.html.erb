<div class ="container text-left">
  <div class = "row mb-5">
    <h1><%= @place["name"] %></h1>
    <p>
    <a class = "btn btn-outline-success btn-lg shadow" href="/entries/new?place_id=<%= @place["id"] %>" role="button"> New Entry </a>
    </p>
  </div>
</div>

  <div class = "container text-left m-2">
    <div class = "row mb-5">
      <h2>My Entries</h2>
    </div>
    <div class= "row">
      <% for entry in @entries %>

          <div class = "col-md-4 ">
            <h3><%= entry["title"] %></h3>
            <h4><%= entry["occurred_on"] %></h4>
            
              <% if entry.uploaded_image.attached? %>
                <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
                      
              <% end %>
              <p><%= entry["description"] %></p>
          </div>
      
      <% end %>
   </div>
  </div>


<p>
  <a href="/places">Back to All Places</a>
</p>