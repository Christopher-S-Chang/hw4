<div class ="container text-left">
  <div class = "row mb-5">
    <h1>Login</h1>
  </div>
</div>




<form action="/sessions" method="post">

  <div class="mb-3">
    <label for="email_input" class="form-label">Email address</label>
    <input type="email" class="form-control" name="email" id="email_input" aria-describedby="emailHelp">
  </div>

  <div class="mb-3">
    <label for="password_input" class="form-label">Password</label>
    <input type="password" class="form-control" name="password" id="password_input">
  </div>

  <button type="submit" class="btn btn-secondary">Login</button>
</form>
