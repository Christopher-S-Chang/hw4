<h1>New User Account</h1>

<form action="/users" method="post">
  <div class="mb-3">
    <label for="username_input" class="form-label">Username</label>
    <input type="text" class="form-control" name="username" id="username_input" aria-describedby="emailHelp">
  </div>
  
  <div class="mb-3">
    <label for="email_input" class="form-label">Email address</label>
    <input type="email" class="form-control" name="email" id="email_input" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>

  <div class="mb-3">
    <label for="password_input" class="form-label">Password</label>
    <input type="password" class="form-control" name="password" id="password_input">
  </div>

  <button type="submit" class="btn btn-secondary">Signup</button>
</form>